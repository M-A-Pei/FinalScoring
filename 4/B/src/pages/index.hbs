<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>{{title}}</title>
  </head>
  <body class="bg-dark text-light">
    {{>navbar}}

    <dav class="container-fluid">
        <div class="row">
            <div class="col-md-12 text-center">
                {{#if byType}}
                    <h1>{{type}} list:</h1>
                {{/if}}

                {{#if bySearch}}
                    <h1>Search for "{{search}}":</h1>
                {{/if}}

                {{#if findAll}}
                    <h1>Heroes List:</h1>
                {{/if}}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 d-flex justify-content-evenly flex-wrap">
            {{#each data}}
                <div class="card m-4 bg-secondary" style="width: 18rem;">
                    <img style="height: 250px;" class="bg-light" src='/uploads/{{this.picture}}' class="card-img-top" alt="...">
                    <div class="card-body">
                        <a href="/detail/{{this.id}}" class="text-decoration-none text-light"><h5 class="card-title">{{this.hero}}</h5></a>
                        <p class="card-text">Class: {{this.class}}</p>
                        <div>
                            <a href="/edit/{{this.id}}" class="btn btn-warning" style="width: 49%;">edit</a>
                            <form action="/delete/{{this.id}}" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger" style="width: 49%;">delete</button>
                            </form>
                        </div>
                        
                    </div>
                </div>
            {{/each}}
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>